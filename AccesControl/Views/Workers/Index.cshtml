@model IEnumerable<WorkersDB.Models.Worker>

<div style="background-color:white; margin-top:5%;">
    <table class="table">
        <thead>
            <tr>
                
                <th>
                   Имя
                </th>
                <th>
                    Фамилия
                </th>
                <th>
                    Отчество
                </th>
                <th>
                    Тел.
                </th>
                <th>
                    Должглсть
                </th>
                <th>
                    фото
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    <img src="@Url.Content(item.Image)" height="100" width="200" alt="фото">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">ред.</a> |
                    <a asp-action="Details" asp-route-id="@item.id">дет.</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">удал.</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    </div>

