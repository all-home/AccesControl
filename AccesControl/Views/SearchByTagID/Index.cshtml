@model WorkersDB.Models.Worker
div class="container">
<div class="raw">
    <div class="col-md-6 col-md-offset-4 center-top">

        <form asp-action="Search" asp-anti-forgery="true">
            <div class="card" style="width: 18rem;">
               <div class="card-body">
                    <div class="form-group">
                        <td>Приложите метку</td>
                        <input autofocus type="password" asp-for="TagId" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Поиск</button>
                    </div>

                </div>
            </div>
        </form>

    </div>
</div>





